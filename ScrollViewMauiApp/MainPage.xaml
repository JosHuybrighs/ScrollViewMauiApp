<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrollViewMauiApp.MainPage">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Hide keyboard" Order="Primary" Clicked="OnHideKeyboardButtonClicked"/>
  </ContentPage.ToolbarItems>


  <ScrollView x:Name="PageScrollView">
    <VerticalStackLayout x:Name="ContentPanel" Padding="20" Spacing="20">

      <Editor HeightRequest="180" Placeholder="Top Editor" />
      <Button Text="Hide keyboard"
              FontSize="12"
              Style="{StaticResource TextOnlyButton}"
              HorizontalOptions="Start"
              Clicked="OnHideKeyboardButtonClicked"/>

      <Editor HeightRequest="180" Placeholder="Middle Editor" />
      <Button Text="Hide keyboard"
              FontSize="12"
              Style="{StaticResource TextOnlyButton}"
              HorizontalOptions="Start"
              Clicked="OnHideKeyboardButtonClicked"/>
      
      <Editor HeightRequest="180" Placeholder="Bottom Editor" />
      <Button Text="Hide keyboard"
              FontSize="12"
              Style="{StaticResource TextOnlyButton}"
              HorizontalOptions="Start"
              Clicked="OnHideKeyboardButtonClicked"/>

    </VerticalStackLayout>
  </ScrollView>

</ContentPage>
